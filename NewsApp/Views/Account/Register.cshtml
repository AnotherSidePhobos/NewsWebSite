@model RegisterViewModel
<div>
    <h1>Sign Up</h1>
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Register" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div asp-validation-summary="All"></div>
            <div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            @*<div class="form-group row">
                <label class="col-md-2" asp-for="RoleName"></label>
                <div class=" col-md-10">
                    <select asp-for="RoleName" asp-items="@NewsApp.Utility.Helper.User" class="form-control"></select>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>*@
            <div>
                <input type="submit" value="Sign Up" />
            </div>

            <div>
                <a asp-controller="Account" asp-action="Login">Log in</a>
            </div>
        </form>
    </div>
</div>