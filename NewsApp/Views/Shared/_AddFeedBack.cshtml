<div class="modal fade" role="dialog" id="feedBackInput" data-backdrop="static" data-keyboard="false">
    <div id="feedBackInput" class="modal-dialog">
        <div class="modal-content">
            <form id="feedBackForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <h4>Leave ur feed back</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="comment">Comment</label>
                        <textarea type="text" class="form-control" id="comment"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" />
                    </div>
                    <input type="hidden" id="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="onCloseModal();">Close</button> &nbsp;
                    <button type="button" id="btnSubmit" class="btn btn-success" onclick="onSubmitForm();">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>